<CodeSnippet Format="1.1.0" xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
  <Header>
    <Title>Custom Sass Function</Title>
    <Author>Clyde D'Souza</Author>
    <Shortcut>custom</Shortcut>
    <Description>
      Code snippet for adding a custom Sass function
    </Description>
    <SnippetTypes>
      <SnippetType>Expansion</SnippetType>
    </SnippetTypes>
  </Header>
  <Snippet>
    <Declarations>
      <Literal>
        <ID>functionName</ID>
        <ToolTip>Replace this with a valid function name describing what the function does</ToolTip>
        <Default>sum-function</Default>
      </Literal>
      <Literal>
        <ID>selector</ID>
        <ToolTip>Replace this with your selector</ToolTip>
        <Default>p</Default>
      </Literal>
    </Declarations>
    <Code Language="CSS">
      <![CDATA[
      // This is how you create a custom function
      @function $functionName$($$x, $$y){
        @return $$x + $$y;
      }
      
      $selector${
        // This is how you use a function
        font-size: $functionName$(10px, 5px);
      }
      $end$]]>
    </Code>
  </Snippet>
</CodeSnippet>